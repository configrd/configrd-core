<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<bean class="com.appcrossings.config.HierarchicalPropertyPlaceholderConfigurer" init-method="init" >
		<constructor-arg value="classpath:/env/hosts.properties" type="java.lang.String" />
		<constructor-arg value="1" type="int"/>
	</bean>

	<bean class="com.appcrossings.config.SampleClass">
		<property name="someOtherValue" value="${property.3.name}" />
	</bean>

</beans>
